<local:VigilWindow
    x:Class="Vigil.Views.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:Vigil.Views"
    Title="System Monitor"
    Height="400"
    Width="600"
    Topmost="True">

    <local:VigilWindow.Resources>
        <Style x:Key="Graph" TargetType="Border">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="Black"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <EventSetter Event="MouseEnter" Handler="SquareBorder_MouseEnter"/>
            <EventSetter Event="MouseLeave" Handler="SquareBorder_MouseLeave"/>
        </Style>
        <Style x:Key="Text" TargetType="TextBlock">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="VerticalAlignment" Value="Stretch"/>
            <Setter Property="TextAlignment" Value="Left"/>
        </Style>
        <Style x:Key="Cell" TargetType="Border">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="Black"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <EventSetter Event="MouseEnter" Handler="SquareBorder_MouseEnter"/>
            <EventSetter Event="MouseLeave" Handler="SquareBorder_MouseLeave"/>
        </Style>
    </local:VigilWindow.Resources>

    <Grid Margin="10" MouseDown="Window_MouseDown">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <!-- Title at the top -->
        <Label
            Grid.Row="0"
            Content="System Monitor"
            FontSize="16"
            FontWeight="Bold"
            Background="Transparent"
            HorizontalAlignment="Left"/>

        <!-- 2x4 layout for squares -->
        <UniformGrid
            Grid.Row="1"
            Rows="2"
            Columns="4"
            HorizontalAlignment="Left"
            VerticalAlignment="Top">

            <Border Style="{StaticResource Cell}">
                <Border Style="{StaticResource Graph}">
                    <Image Name="cpuUsage"/>
                </Border>
            </Border>

            <Border Style="{StaticResource Cell}">
                <Border Style="{StaticResource Graph}">
                    <Image Name="gpuUsage"/>
                </Border>
            </Border>

            <Border Style="{StaticResource Cell}">
                <Border Style="{StaticResource Graph}">
                    <Image Name="gpuVramUsage"/>
                </Border>
            </Border>

            <Border Style="{StaticResource Cell}">
                <Border Style="{StaticResource Graph}">
                    <Image Name="ramUsage"/>
                </Border>
            </Border>

            <Border Style="{StaticResource Cell}">
                <Border Style="{StaticResource Graph}">
                    <Image Name="cpuTemp"/>
                </Border>
            </Border>

            <Border Style="{StaticResource Cell}">
                <Border Style="{StaticResource Graph}">
                    <Image Name="gpuTemp"/>
                </Border>
            </Border>

            <Border Style="{StaticResource Cell}">
                <Border Style="{StaticResource Graph}">
                    <Image Name="ethUsage"/>
                </Border>
            </Border>

            <Border Style="{StaticResource Cell}">
                <Label Style="{StaticResource Text}" Content="20"/>
            </Border>

        </UniformGrid>
    </Grid>
</local:VigilWindow>
